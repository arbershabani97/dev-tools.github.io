{
	"name": "dev-tools",
	"version": "0.1.0",
	"private": true,
	"main": "public/electron.js",
	"homepage": "./",
	"dependencies": {
		"@casl/ability": "^5.2.2",
		"@casl/react": "^2.2.2",
		"@testing-library/jest-dom": "^5.11.9",
		"@testing-library/react": "^11.2.5",
		"@testing-library/user-event": "^12.7.3",
		"electron-is-dev": "^1.2.0",
		"electron-squirrel-startup": "^1.0.0",
		"evergreen-ui": "^5.1.2",
		"file-saver": "^2.0.5",
		"lodash": "^4.17.21",
		"moment": "^2.29.1",
		"node-sass": "^5.0.0",
		"react": "^17.0.1",
		"react-copy-to-clipboard": "^5.0.3",
		"react-dom": "^17.0.1",
		"react-dropzone": "^11.3.1",
		"react-hook-form": "^6.15.4",
		"react-redux": "^7.2.2",
		"react-router-dom": "^5.2.0",
		"react-scripts": "4.0.3",
		"react-syntax-highlighter": "^15.4.3",
		"redux": "^4.0.5",
		"redux-persist": "^6.0.0",
		"redux-thunk": "^2.3.0",
		"sass": "^1.32.8",
		"web-vitals": "^1.1.0"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"dev": "concurrently -k \"BROWSER=none npm start\" \"npm:electron\"",
		"electron": "wait-on tcp:3000 && electron-forge start",
		"package": "react-scripts build && electron-forge package  --package-manager=yarn",
		"make": "react-scripts build && electron-forge make --package-manager=yarn",
		"make-icon": "npx electron-icon-maker --input=/absolute/path/to/cra-electron-forge-demo/src/app-icon.png --output=src",
		"predeploy": "npm run build",
		"deploy": "gh-pages -d build"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"git add"
		],
		"*.{scss}": [
			"stylelint --fix",
			"git add"
		]
	},
	"devDependencies": {
		"@electron-forge/cli": "^6.0.0-beta.54",
		"@electron-forge/maker-deb": "^6.0.0-beta.54",
		"@electron-forge/maker-rpm": "^6.0.0-beta.54",
		"@electron-forge/maker-squirrel": "^6.0.0-beta.54",
		"@electron-forge/maker-zip": "^6.0.0-beta.54",
		"concurrently": "^5.2.0",
		"electron": "^9.1.1",
		"electron-devtools-installer": "^3.1.1",
		"eslint": "^7.11.0",
		"eslint-config-adjunct": "^3.0.0",
		"eslint-config-airbnb": "^18.2.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-alloy": "^3.6.0",
		"eslint-config-canonical": "^18.1.0",
		"eslint-config-prettier": "^6.12.0",
		"eslint-config-problems": "^3.0.1",
		"eslint-plugin-array-func": "^3.1.4",
		"eslint-plugin-autofix": "0.0.9",
		"eslint-plugin-css-modules": "^2.11.0",
		"eslint-plugin-eslint-comments": "^3.1.2",
		"eslint-plugin-html": "^6.0.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-json-format": "^2.0.1",
		"eslint-plugin-jsx-a11y": "^6.3.1",
		"eslint-plugin-markdown": "^1.0.2",
		"eslint-plugin-no-constructor-bind": "^1.2.8",
		"eslint-plugin-no-secrets": "^0.3.4",
		"eslint-plugin-no-use-extend-native": "^0.4.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-only-error": "^1.0.2",
		"eslint-plugin-optimize-regex": "^1.1.7",
		"eslint-plugin-prettier": "^3.1.4",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-react": "^7.21.2",
		"eslint-plugin-react-extra": "^0.1.0",
		"eslint-plugin-react-hooks": "^2.5.0",
		"eslint-plugin-react-redux": "^3.0.2",
		"eslint-plugin-simple-import-sort": "^5.0.2",
		"gh-pages": "^3.1.0",
		"husky": "^3.1.0",
		"lint-staged": "^9.5.0",
		"prettier": "^1.19.1",
		"stylelint": "^12.0.1",
		"stylelint-config-prettier": "^8.0.0",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-order": "^3.1.1",
		"stylelint-prettier": "^1.1.2",
		"stylelint-scss": "^3.16.0",
		"wait-on": "^5.1.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"icon": "src/icons/mac/icon.icns",
				"name": "dev-tools"
			},
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "dev_tools"
					}
				},
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin"
					]
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {}
				}
			]
		}
	}
}
